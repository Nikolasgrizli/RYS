mixin iconWithTooltip(name,description = name, cls = '', type='js-tooltipster')
	-
		let dataTooltip = {};
		const uniq = cyrb53(name,getRandomArbitrary(1,4))
		if(description === name){
			dataTooltip.title = name;
		} else {
			dataTooltip['data-tooltip-content'] = `#tooltip_content-${uniq}`;
		}
	.iconWithTooltip(class= cls ? (type + ' ' + cls) : type)&attributes(dataTooltip)
		if(name.includes(':'))
			- let substring = name.split(':')[1];
			span!=substring
		else
			+icon(name)

		if('data-tooltip-content' in dataTooltip)
			.tooltip_templates.tooltip_templates_icon-description
				div.p-2(id!=`tooltip_content-${uniq}`)
					if description === name
						| #{description}
					else
						block
