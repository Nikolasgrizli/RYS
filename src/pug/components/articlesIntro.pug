mixin articlesIntro(img,title,subtitle)
	section.section.section_intro
		.intro&attributes(attributes)
			.intro__bg(style=`background-image: url(${img || 'assets/img/articles/intro2.jpeg'});`)
			.intro__content.container.container_old
				h1.intro__title!=title || 'Цифровий архів фольклору'
				.intro__subtitle!=subtitle || 'Слобожанщини та Полтавщини'
				.intro__btn
					a.btn.btn_main(href='#finder' aria-label='Перейти до пошуку')
						i.icon
							+icon('search').icon-search
						span Пошук пісні

